
{% extends '/base.html.twig' %}

{% block title %}Add Exercise{% endblock %}

{% block body %}
<div class="container">
        <div class="row justify-content-center">

            <div class="col-md-6 mt-5">
                <div class="text-center">
                <h1>Add Exercise</h1>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.video_link, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.type, { 'attr': {'class': 'form-select'} }) }}
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}
