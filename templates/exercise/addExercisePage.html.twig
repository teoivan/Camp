
{% extends '/base.html.twig' %}

{% block title %}Add Exercise{% endblock %}

{% block content %}
    <div class="mt-4">

        <h1>Add Exercise</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.video_link, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.type, { 'attr': {'class': 'form-select'} }) }}
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
