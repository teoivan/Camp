{% extends '/base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">User List</h1>
        <div class="row justify-content-center">
            <div class="col-10 mb-3">
                <a href="{{  path('add-user')}}" class="btn btn-secondary mt-3 m-md-2">Add new user</a>
            </div>
            {% for user in users %}
                <div class="col-10 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="card-title mb-1">{{ user.name }}</h2>
                                <p class="card-text mb-1"><strong>Email:</strong> {{ user.email }}</p>
                                <p class="card-text mb-1"><strong>Birthday:</strong> {{ user.birthDay|date('d-m-Y') }}</p>
                                <p class="card-text mb-0"><strong>Gender:</strong> {{ gender_map[user.gender]|default('Unknown') }}</p>
                            </div>
                            <a href="{{ path('edit-user', { 'id': user.id }) }}" class="btn btn-primary ml-auto">Edit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}