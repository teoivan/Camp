{% extends '/base.html.twig' %}

{% block title %}Sign In{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block content %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <h1>Sign In</h1>
                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.sign_in) }}
                <a href="{{ path('new-user', {'role':'trainer'}) }}">Are you a new trainer? Sign Up</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
