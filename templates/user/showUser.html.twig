{% extends '/base.html.twig' %}

{% block title %}Account information{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">User details</h1>
        <div class="row justify-content-center">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="card-title mb-1">{{ user.name }}</h2>
                                <p class="card-text mb-1"><strong>Email:</strong> {{ user.email }}</p>
                                <p class="card-text mb-1"><strong>Role:</strong> {{ user.role }}</p>
                                <p class="card-text mb-1"><strong>Birthday:</strong> {{ user.birthDay|date('d-m-Y') }}</p>
                                <p class="card-text mb-0"><strong>Gender:</strong> {{ gender_map[user.gender]|default('Unknown') }}</p>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
{% endblock %}