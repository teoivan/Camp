<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #f0f7fa; /* Light pastel purple */
                color: #171426;
            }
            .navbar-gradient {
                background: linear-gradient(45deg, #7465b5, #53abbd); /* Gradient from pastel purple to pastel blue */
            }
            .navbar-gradient .navbar-nav .nav-link {
                color: #FFFFFF;
            }
            .navbar-gradient .navbar-nav .nav-link:hover {
                color: #171426;
            }
            .btn-primary {
                background-color:#6554AF; /* Pastel purple */
                border-color: #6554AF;
            }
            .btn-primary:hover {
                background-color: #7b6fb0;
                border-color: #7b6fb0;
            }
            .btn-secondary {
                background-color: #53abbd; /* Pastel blue */
                border-color: #53abbd;
            }
            .btn-secondary:hover {
                background-color:#64b4c4;
                border-color: #64b4c4;
            }

        </style>
    {% endblock %}
    {% set gender_map = {
        0: 'male',
        1: 'female',
        2: 'other',
        3: 'prefer not to say'
    } %}
    {% block navbar %}
        <nav class="navbar navbar-expand-lg navbar-gradient">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('show-exercises') }}">Exercises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('show-users') }}">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('show-workouts') }}">Workouts</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
